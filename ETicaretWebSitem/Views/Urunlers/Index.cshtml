@model IEnumerable<ETicaretWebSitem.Models.Urunler>

@{
    ViewBag.Title = "Index";
}

<h2>Ürünler</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunAD)
        </th>
        <th>Resim</th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAcikalamasi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyatı)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategoriler.KategoriAD)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAcikalamasi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunFiyatı)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategoriler.KategoriAD)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.UrunID }, new { @class = "btn btn-success btn-sm" })
            @Html.ActionLink("Detay", "Details", new { id = item.UrunID }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink("Sil", "Delete", new { id = item.UrunID }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
